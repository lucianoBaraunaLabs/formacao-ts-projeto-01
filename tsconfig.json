{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "rootDir": "./src",    
    "outDir": "./dist",
    "removeComments": true,
    "importsNotUsedAsValues": "remove",
    "downlevelIteration": true, // aumenta compatibilidade com tipos mais antigos
    "allowSyntheticDefaultImports": true, // importa tudo de uma vez mesmo sem precisar usar.
    "esModuleInterop": true, // aumenta a compatibilidade com o CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "skipLibCheck": true,
  }
}
